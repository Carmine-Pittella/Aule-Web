<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>index.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.authors</param-name>
        <param-value>Carmine Pittella</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>ISO-8859-1</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.driver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.connectionstring</param-name>
        <param-value>jdbc:mysql://localhost/aule_web?serverTimezone=Europe/Rome</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.username</param-name>
        <param-value>aule_website</param-value>
    </context-param>
    <context-param>
        <param-name>data.jdbc.password</param-name>
        <param-value>aule_webpass</param-value>
    </context-param>
    <context-param>
        <param-name>data.source</param-name>
        <param-value>jdbc/aule_web</param-value>
    </context-param>
    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>it.univaq.f4i.iw.Aule_Web.controller.HomePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dettagliEventoServlet</servlet-name>
        <servlet-class>it.univaq.f4i.iw.Aule_Web.controller.dettagliEventoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/HomePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dettagliEventoServlet</servlet-name>
        <url-pattern>/dettagliEvento</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>HomePage</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/aule_web</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
